@{
    Layout = "~/Views/Shared/_LayoutConfirm.cshtml";
    ViewData["Title"] = "ConfirmContact";
}

<div class="col-auto p-5 text-center">
    <img src="~/img/siges700px.png" class="card-img-top rounded mt-5" alt="SIGES - Roatech Services">
    <h2 class="mt-4">Confirmación de Contacto</h2>
    <p class="mt-3">@ViewData["Message"]</p>
</div>

<script>
    function getParameterByName(name) {
        name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
        var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
            results = regex.exec(location.search);
        return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
    }

    $(document).ready(function() {
        var token = getParameterByName('token');
        if (token != null) {
            $.ajax({
                url: '@Url.Action("ConfirmContact","ContactoCliente")',
                method: "POST",
                data: {
                    token: token,
                }
            });
        }
    });
</script>