                            <input id="txtTelefono" type="text" class="form-control" maxlength="10" placeholder="Ej: 5556058941" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-6 text-left">
                            <label class="control-label">Puesto *</label>
                            <input id="txtPuesto" type="text" class="form-control" maxlength="50" />
                        </div>
                        <div class="form-group col-6 text-left">
                            <label class="control-label">Categoría *</label>
                            <input id="txtCategoria" type="text" class="form-control" maxlength="50" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-6 text-left">
                            <label class="control-label" for="slcAdscripcion">Adscripción *</label>
                            <select class="form-control" id="slcAdscripcion" >
                                <option value="null" disabled selected>Selecciona Adscripción</option>
                                <option value="Interno">Interno</option>
                                <option value="Externo">Externo</option>
                            </select>
                        </div>
                        <div class="form-group col-6 text-left">
                            <label class="control-label">Sueldo</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                </div>
                                <input id="txtSueldo" type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-12 text-left">
                            <label class="control-label">Dirección</label>
                            <input id="txtDireccion" type="text" class="form-control" maxlength="100" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-6 text-left">
                            <label class="control-label">Municipio</label>
                            <input id="txtMunicipio" type="text" class="form-control" maxlength="50" />
                        </div>
                        <div class="form-group col-6 text-left">
                            <label class="control-label">Entidad Federativa</label>
                            <input id="txtEntidad" type="text" class="form-control" maxlength="50" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-6 text-left">
                            <label class="control-label">Campo Opcional</label>
                            <input id="txtOp1" type="text" class="form-control" maxlength="100"/>
                        </div>
                        <div class="form-group col-6 text-left">
                            <label class="control-label">Campo Opcional</label>
                            <input id="txtOp2" type="text" class="form-control" maxlength="100" />
                        </div>
                    </div>
                    <div class="form-group text-left">
                        <label class="control-label">Fotografía</label>
                        <input id="iptFoto" type="file" class="form-control-file" />
                    </div>
                    <div class="form-group text-right">
                        <small>* Campos obligatorios</small>
                    </div>
                </form>
            `,
            onOpen: () => {
                $("#txtTelefono").keypress(evt => {
                  if (evt.which != 8 && evt.which != 0 && evt.which < 48 || evt.which > 57 ){
                    evt.preventDefault();
                  }
                });
                $("#txtSueldo").keypress(evt => {
                  if (evt.which != 8 && evt.which != 0 && evt.which != 44 && evt.which != 46 && evt.which < 48 || evt.which > 57 ){
                    evt.preventDefault();
                  }
                });
                $("input[type='text']").attr("onkeyup",'this.value = this.value.toUpperCase();');
            },
            preConfirm: () =>{
                if($("#txtNombre").val().length === 0){
                    $("#txtNombre").attr("style", "border-color: #f27474!important;box-shadow: 0 0 2px #f27474!important;");
                }
                else{
                    $("#txtNombre").removeAttr("style");
                }
                if($("#txtPaterno").val().length === 0){
                    $("#txtPaterno").attr("style", "border-color: #f27474!important;box-shadow: 0 0 2px #f27474!important;");
                }
                else{
                    $("#txtPaterno").removeAttr("style");
                }
                if($("#txtMaterno").val().length === 0){
                    $("#txtMaterno").attr("style", "border-color: #f27474!important;box-shadow: 0 0 2px #f27474!important;");
                }
                else{
                    $("#txtMaterno").removeAttr("style");
                }
                if($("#txtEmail").val().length === 0){
                    $("#txtEmail").attr("style", "border-color: #f27474!important;box-shadow: 0 0 2px #f27474!important;");
                }
                else if(!$("#txtEmail").val().match(/^([\w-\.]+@@([\w-]+\.)+[\w-]{2,4})?$/)){
                    $("#txtEmail").attr("style", "border-color: #f27474!important;box-shadow: 0 0 2px #f27474!important;");
                }
                else{
                    $("#txtEmail").removeAttr("style");
                }
                if($("#txtRFC").val().length === 0){
                    $("#txtRFC").attr("style", "border-color: #f27474!important;box-shadow: 0 0 2px #f27474!important;");
                }
                else if(!$("#txtRFC").val().match(/^([A-ZÑ&]{3,4}) ?(?:- ?)?(\d{2}(?:0[1-9]|1[0-2])(?:0[1-9]|[12]\d|3[01])) ?(?:- ?)?([A-Z\d]{2})([A\d])$/)){
                    $("#txtRFC").attr("style", "border-color: #f27474!important;box-shadow: 0 0 2px #f27474!important;");
                }
                else{
                    $("#txtRFC").removeAttr("style");
                }
                if($("#txtCURP").val().length === 0){
                    $("#txtCURP").attr("style", "border-color: #f27474!important;box-shadow: 0 0 2px #f27474!important;");
                }
                else if(!$("#txtCURP").val().match(/^([A-Z][AEIOUX][A-Z]{2}\d{2}(?:0[1-9]|1[0-2])(?:0[1-9]|[12]\d|3[01])[HM](?:AS|B[CS]|C[CLMSH]|D[FG]|G[TR]|HG|JC|M[CNS]|N[ETL]|OC|PL|Q[TR]|S[PLR]|T[CSL]|VZ|YN|ZS)[B-DF-HJ-NP-TV-Z]{3}[A-Z\d])(\d)$/)){
                    $("#txtCURP").attr("style", "border-color: #f27474!important;box-shadow: 0 0 2px #f27474!important;");
                }
                else{
                    $("#txtCURP").removeAttr("style");
                }
                if($("#txtTelefono").val().length > 0 && !$("#txtTelefono").val().match(/^(\(\+?\d{2,3}\)[\*|\s|\-|\.]?(([\d][\*|\s|\-|\.]?){6})(([\d][\s|\-|\.]?){2})?|(\+?[\d][\s|\-|\.]?){8}(([\d][\s|\-|\.]?){2}(([\d][\s|\-|\.]?){2})?)?)$/)){
                    $("#txtTelefono").attr("style", "border-color: #f27474!important;box-shadow: 0 0 2px #f27474!important;");
                }
                else{
                    $("#txtTelefono").removeAttr("style");
                }
                if($("#txtPuesto").val().length === 0){
                    $("#txtPuesto").attr("style", "border-color: #f27474!important;box-shadow: 0 0 2px #f27474!important;");
                }
                else{
                    $("#txtPuesto").removeAttr("style");
                }
                if($("#txtCategoria").val().length === 0){
                    $("#txtCategoria").attr("style", "border-color: #f27474!important;box-shadow: 0 0 2px #f27474!important;");
                }
                else{
                    $("#txtCategoria").removeAttr("style");
                }
                if($("#slcAdscripcion").val() === null){
                    $("#slcAdscripcion").attr("style", "border-color: #f27474!important;box-shadow: 0 0 2px #f27474!important;");
                }
                else{
                    $("#slcAdscripcion").removeAttr("style");
                }

                if($("#slcAdscripcion").val() === null){
                    Swal.showValidationMessage("Selecciona adscripción");
                }
                if($("#txtTelefono").val().length > 0 && $("#txtTelefono").val().length < 10){
                    Swal.showValidationMessage("El teléfono es incorrecto");
                }
                if(!$("#txtCURP").val().match(/^([A-Z][AEIOUX][A-Z]{2}\d{2}(?:0[1-9]|1[0-2])(?:0[1-9]|[12]\d|3[01])[HM](?:AS|B[CS]|C[CLMSH]|D[FG]|G[TR]|HG|JC|M[CNS]|N[ETL]|OC|PL|Q[TR]|S[PLR]|T[CSL]|VZ|YN|ZS)[B-DF-HJ-NP-TV-Z]{3}[A-Z\d])(\d)$/)){
                    Swal.showValidationMessage("El CURP es incorrecto, ingresar un CURP correcto");
                }
                if(!$("#txtRFC").val().match(/^([A-ZÑ&]{3,4}) ?(?:- ?)?(\d{2}(?:0[1-9]|1[0-2])(?:0[1-9]|[12]\d|3[01])) ?(?:- ?)?([A-Z\d]{2})([A\d])$/)){
                    Swal.showValidationMessage("El RFC es incorrecto, ingresar un RFC correcto");
                }
                if(!$("#txtEmail").val().match(/^([\w-\.]+@@([\w-]+\.)+[\w-]{2,4})?$/)){
                    Swal.showValidationMessage("El correo electrónico es incorrecto");
                }
                if($("#txtNombre").val().length === 0 || $("#txtPaterno").val().length === 0 || $("#txtMaterno").val().length === 0 || $("#txtEmail").val().length === 0 || $("#txtRFC").val().length === 0 || $("#txtCURP").val().length === 0 || $("#txtPuesto").val().length === 0 || $("#txtCategoria").val().length === 0 ){
                    Swal.showValidationMessage("Algún campo obligatorio está vacío");
                }
            }
        }).then(result => {
            if(result.value){
                $.ajax({
                    url: '@Url.Action("IfPersonExist","Rest")',
                    method: "GET",
                    data: {
                        RFC: $("#txtRFC").val(),
                        CURP: $("#txtCURP").val()
                    },
                    async: true,
                    dataType: "json",
                    success: function (res){
                        if(res){
                            Swal.fire({
                                icon: 'error',
                                title: '¡Error!',
                                confirmButtonColor: "#67E7CF",
                                confirmButtonText:"Aceptar",
                                text: `La persona ya existe`
                            });
                        }
                        else{
                            const formData = new FormData($('form')[1]);
                            formData.append('__RequestVerificationToken', token);
                            if($("#iptFoto")[0].files[0]){
                                formData.append('fotografia', $("#iptFoto")[0].files[0], $("#iptFoto")[0].files[0].name);
                            }
                            formData.append('Nombre', $("#txtNombre").val());
                            formData.append('Paterno', $("#txtPaterno").val());
                            formData.append('Materno', $("#txtMaterno").val());
                            formData.append('RFC', $("#txtRFC").val());
                            formData.append('CURP', $("#txtCURP").val());
                            formData.append('Email',$("#txtEmail").val());
                            formData.append('ClaveEmpleado', $("#txtCVEEmpleado").val());
                            formData.append('Telefono', $("#txtTelefono").val());
                            formData.append('TelefonoContacto', $("#txtTelefono").val());
                            formData.append('Estatus', true);
                            formData.append('Puesto', $("#txtPuesto").val());
                            formData.append('Categoria', $("#txtCategoria").val());
                            formData.append('Adscripcion', $("#slcAdscripcion").val());
                            formData.append('Direccion', $("#txtDireccion").val());
                            formData.append('EntidadFederativa', $("#txtEntidad").val());
                            formData.append('Municipio', $("#txtMunicipio").val());
                            formData.append('Sueldo', ($("#txtSueldo").val() === "")?"0.00":$("#txtSueldo").val().replace(',', '.'));
                            formData.append('Opcional1', $("#txtOp1").val());
                            formData.append('Opcional2', $("#txtOp2").val());
                            $.ajax({
                                url: '@Url.Action("Create","Personas")',
                                method: "POST",
                                data: formData,
                                async: true,
                                contentType: false,
                                processData: false,
                                success: function (res){
                                    Swal.fire({
                                        icon: 'success',
                                        title: '¡Éxito!',
                                        confirmButtonColor: "#67E7CF",
                                        confirmButtonText:"Aceptar",
                                        text: `La persona se registró con éxito`,
                                        onClose: ()=>{
                                            location.reload(true);
                                        }
                                    }).then((result) => {
                                        if (result.value) {
                                            location.reload(true);
                                        }
                                    });
                                }
                            });
                        }
                    }
                });
            }
            else{
                Swal.close();
            }
        });
    }

