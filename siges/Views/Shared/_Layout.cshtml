<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | SSM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/owl.carousel/assets/owl.carousel.css">
    <link rel="stylesheet" href="~/lib/owl.carousel/assets/owl.theme.default.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">
    <link href="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("css", required: false)
</head>
<body>
    <div class="wrapper">
        <partial name="_SideBar" />
        <div id="content">
            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
                    <div class="container">
                        <button type="button" id="sidebarCollapse" class="btn btn-success margR-10px" data-toggle="tooltip" data-placement="bottom" title="Menu" data-original-title="Tooltip on bottom">
                            <i class="fas fa-bars"></i>
                        </button>
                        <a class="navbar-brand paddTop10px" asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="~/img/siges700px.png" class="rounded img-fluid" width="150" height="130" alt="SSM/Logo">
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </nav>
            </header>
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            @* <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; @DateTime.Today.Year | SIGES - Roatech Services, S.A. de C.V.
                </div>
            </footer> *@
        </div>
    </div>
       @RenderSection("Modals", required: false)
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table-locale-all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
