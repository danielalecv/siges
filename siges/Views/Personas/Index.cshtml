                            <div class="form-row">
                                <div class="form-group col-12 text-left">
                                    <label class="control-label">Dirección</label>
                                    <input type="text" class="form-control" value="${(data.data.direccion===null)?"":data.data.direccion}" readonly/>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-6 text-left">
                                    <label class="control-label">Municipio</label>
                                    <input type="text" class="form-control" value="${(data.data.municipio===null)?"":data.data.municipio}" readonly/>
                                </div>
                                <div class="form-group col-6 text-left">
                                    <label class="control-label">Entidad Federativa</label>
                                    <input type="text" class="form-control" value="${(data.data.entidadFederativa===null)?"":data.data.entidadFederativa}" readonly/>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-6 text-left">
                                    <label class="control-label">Campo Opcional</label>
                                    <input type="text" class="form-control" value="${(data.data.opcional1===null)?"":data.data.opcional1}" readonly/>
                                </div>
                                <div class="form-group col-6 text-left">
                                    <label class="control-label">Campo Opcional</label>
                                    <input type="text" class="form-control" value="${(data.data.opcional2===null)?"":data.data.opcional2}" readonly/>
                                </div>
                            </div> 
                        `
                    });
                }
            }
        });
    }

    const btnEdit = element => {
        const token = $("[name='__RequestVerificationToken']").val();
        $.ajax({
            url: '@Url.Action("Details","Personas")',
            method: "GET",
            data: {
                id: element.id
            },
            async: true,
            dataType: "json",
            success: function (data){
                if(data.success){
                    Swal.fire({
                        title:"Editar Persona",
                        confirmButtonColor: "#67E7CF",
                        confirmButtonText:"Guardar",
                        cancelButtonText:"Cancelar",
                        reverseButtons: true,
                        showCancelButton: true,
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        showCloseButton: true,
                        closeButtonHtml: '<i class="fas fa-times"></i>',
                        html:`
                            <form id="editPerForm" method="POST" enctype="multipart/form-data">
                                <div class="form-group text-left">
