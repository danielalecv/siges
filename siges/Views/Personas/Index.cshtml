                                async: true,
                                contentType: false,
                                processData: false,
                                success: function (res){
                                    if(res.success){
                                        Swal.fire({
                                            icon: 'success',
                                            title: '¡Éxito!',
                                            confirmButtonColor: "#67E7CF",
                                            confirmButtonText:"Aceptar",
                                            text: `La persona ${element.name} ha sido modificada`,
                                            onClose: ()=>{
                                                location.reload(true);
                                            }
