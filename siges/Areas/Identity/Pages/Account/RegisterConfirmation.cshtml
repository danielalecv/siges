@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmación de Registro";
}


<div class="container">
    <div class="row justify-content-md-center">
        <div class="card text-center">
            <div class="card-header">
                <h2>Confirmación de Registro</h2>
            </div>
            <div class="card-body">
                @{
                    if (@Model.DisplayConfirmAccountLink){
                        <p>Esta aplicación actualmente no tiene un remitente de correo electrónico real registrado, visita  <a href="https://aka.ms/aspaccountconf">aqu&iacute;</a> para saber cómo configurar un remitente de correo electrónico real. Normalmente, esto se enviar&iacute;a por correo electrónico: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Haga clic aquí para confirmar su cuenta</a></p>
                    }
                    else{
                        <p>Por favor revisa tu correo electr&oacute;nico para verificar tu cuenta</p>
                    }
                }
            </div>
        </div>
    </div>
</div>


