              </div>
          </div>
      </div>
    </div>
</section>

@section scripts {
    <script>
        localStorage.clear();
        const person = (@Html.Raw(Json.Serialize(name.per)));
        const client = @Html.Raw(Json.Serialize(ViewData["cliente"]));
        localStorage.setItem('photography', person.fotografia);
        localStorage.setItem('name', `${person.nombre} ${person.paterno}`);
        localStorage.setItem('client', `${client}`);
    </script>
    <script src="~/lib/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/lib/waypoints/lib/jquery.waypoints.min.js"> </script>
    <script src="~/lib/jquery.counterup/jquery.counterup.min.js"></script>
    <script src="~/js/index.js"></script>
}
